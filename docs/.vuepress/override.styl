.vue-foldable
  .vue-foldable-container
    overflow hidden
  .foldable-view-more
    position relative
    top -80px
    text-align center
    height 50px
    cursor pointer
    .view-more-mask
      opacity 0
      height 80px
      background linear-gradient(to bottom, rgba(55, 55, 55, 0), white)
      &.show-mask
        opacity 1
    .view-more-text
      color #4dba87
    .view-more-icon
      width 18px
      transform scaleY(1)
      &.collapsed
        transform scaleY(-1)

.transition-demo .vue-foldable-container {
  transition: max-height 0.3s
}

.transition-demo .view-more-mask {
  transition: opacity .3s;
}
