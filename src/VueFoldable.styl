.vue-foldable
  position relative
  padding-bottom 30px

  .vue-foldable-container
    overflow hidden

  .vue-foldable-view-more
    position absolute
    bottom 0
    width 100%
    text-align center
    height 30px
    line-height 30px
    cursor pointer
    color #4dba87
    &.collapsed
      .vue-foldable-mask
        opacity 1
        background linear-gradient(to bottom, rgba(55, 55, 55, 0), white)
      .vue-foldable-icon
        transform scaleY(-1)
    &:not(.collapsed)
      .vue-foldable-mask
        opacity 0

    .vue-foldable-mask
      position absolute
      top -80px
      height 80px
      width 100%
      background transparent
      pointer-events none

    .vue-foldable-icon
      width 18px
      transform scaleY(1)
