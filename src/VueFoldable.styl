.vue-foldable
  .vue-foldable-container
    overflow hidden
  .foldable-view-more
    position relative
    top -30px
    text-align center
    height 50px
    cursor pointer
    .view-more-mask
      opacity 0
      height 30px
      background linear-gradient(to bottom, rgba(55, 55, 55, 0), white)
      &.show-mask
        opacity 1
    .view-more-text
      position relative
      top -5px
      color #4dba87
    .view-more-icon
      width 18px
      transform scaleY(1)
      &.collapsed
        transform scaleY(-1)
