.vue-foldable
  .vue-foldable-container
    overflow hidden
  .foldable-view-more
    position relative
    text-align center
    top -30px
    height 50px
    color $green
    cursor pointer
    .view-more-mask
      transition opacity .3s
      opacity 0
      height 30px
      background linear-gradient(to bottom, rgba(55, 55, 55, 0), white)
      &.show-mask
        opacity 1
